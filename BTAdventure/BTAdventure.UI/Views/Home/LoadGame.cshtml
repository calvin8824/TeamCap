@model BTAdventure.Models.LoadGameData
@{
    ViewBag.Title = "Load Game";
}

<h2 class="text-center ">Load Game</h2>
@if (Model.PlayerCharacters.Count() == 0)
{
    <div class="text-center">Looks like you don't have any active games...</div>
    @Html.ActionLink("Start A New Game", "NewGame", "Gameplay", new { @class = "btn btn-outline-primary align-self-end" })
}   
@using (Html.BeginForm("LoadGame", "Home", new
{
    ReturnUrl = ViewBag.ReturnUrl
}, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    if (Model.PlayerCharacters.Count() > 0)
    {
        @Html.DropDownListFor(m => m.PlayerCharacters.First().CharacterId,
                      Model.PlayerCharacters.Select(i => new SelectListItem { Value = i.CharacterId.ToString(), Text = i.CharacterName.ToString() }),
                      new { @class = "form-control" })
        @Html.ActionLink("Start A New Game", "NewGame", "Gameplay", new { id = Model.PlayerCharacters.First().PlayerId }, new { @class = "btn btn-outline-primary align-self-end" })


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Load Game" class="btn btn-info" />
            </div>
        </div>
    }
}
<div class="row">

    @if (User.Identity.IsAuthenticated && User.IsInRole("Creator") || User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create Or Edit A Game", "Index", "Creator", null, new { @class = "btn btn-outline-primary" })
    }
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        @Html.ActionLink("Promote and Demote Users", "AdminControlCentre", "Account", new { @class = "btn btn-outline-primary" })
    }
</div>