@model BTAdventure.Models.Game
@{
    ViewBag.Title = "NewOrEditGame";
}

<div class="row">
    <h2>Game Create/Edit</h2>
    <hr />
</div>
@using (Html.BeginForm("SceneMain", "Creator", FormMethod.Post))
{
    <input type="hidden" value="@Model.GameId" name="GameId" />
    <div class="row">
        <h3>Game:</h3>
    </div>
    <div class="row">
        <input placeholder="Name" class="form-control" value="@Model.GameTitle" name="GameTitle" />
    </div>
    <div class="row">
        <h3>Intro:</h3>
    </div>
    <div class="row">
        @Html.TextAreaFor(m => m.IntroText, new { @class = "form-control", rows = "8" })
    </div>
    <div class="row">
        <h3>Starting Health:</h3>
    </div>
    <div class="row">
        @*<input placeholder="Title" value="@Model.IntroText" name="IntroText"/>*@
        @Html.TextBoxFor(m => m.Health, new { @class = "form-control", rows = "8" })
    </div>
    <div class="row">
        <h3>Starting Gold:</h3>
    </div>
    <div class="row">
        @*<input placeholder="Title" value="@Model.IntroText" name="IntroText"/>*@
        @Html.TextBoxFor(m => m.Gold, new { @class = "form-control", rows = "8" })
    </div>
    <div class="row">
        <button class="btn btn-primary text-center verticalSpacedUpper">Go</button>
    </div>

}
