@model IEnumerable<BTAdventure.Models.Scene>
@{
    ViewBag.Title = "SceneMain";
}

<div class="row">
    <h2>SceneMain</h2>
    <hr />
</div>

<div class="row">
    <button>New Game</button>
    <button>New Ending</button>
    <button>Edit Ending</button>
</div>

<div class="row">
    @if (Model.Any())
    {

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Scene Id</th>
                    <th>Scene Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.SceneId</td>
                            <td>@a.SceneName</td>
                            <td>
                                <a href="#" class="btn btn-primary">Edit</a>
                                <a href="#" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    }
    else
    {
        <text>No existing scene</text>
    }
</div>

<div class="row">
    <button>Create New Scene</button>
</div>