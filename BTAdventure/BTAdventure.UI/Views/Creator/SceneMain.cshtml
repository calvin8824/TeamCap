@model IEnumerable<BTAdventure.Models.Scene>
@{
    ViewBag.Title = "SceneMain";
}

<div class="row">
    <h2>SceneMain</h2>
    <hr />
</div>

<div class="row">
    <button>Edit Game</button>
    <button>New Ending</button>
    <button>Edit Ending</button>
</div>
<div class="row">
    Game ID: @ViewBag.GameTitle
</div>
<div class="row">
    @if (Model.Any())
    {

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Scene Id</th>
                    <th>Scene Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.SceneId</td>
                            <td>@a.SceneName</td>
                            <td>
                                @Html.ActionLink("Edit", "EditGeneration", "Creator",new { sceneId = a.SceneId},  new { @class = "btn btn-primary" })
                                @*<a href="CreateOrEditScene\@a.SceneId" class="btn btn-primary">Edit</a>*@
                                <a href="#" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    }
    else
    {
        <text>No existing scene</text>
    }
</div>

<div class="row">
    @*<a href="CreateOrEditScene\1" class="btn btn-primary">Create New Scene</a>*@
    @Html.ActionLink("Create New Scene", "CreateOrEditScene\\"+ (int)ViewBag.GameId, "Creator", new { @class="btn btn-primary"})
</div>

